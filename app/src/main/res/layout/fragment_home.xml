                app:layout_constraintTop_toBottomOf="@+id/banner2Img"
                app:srcCompat="@drawable/ic_main_instagram" />

            <ImageView
                android:id="@+id/twitterImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toEndOf="@+id/instaImg"
                app:layout_constraintTop_toBottomOf="@+id/banner2Img"
                app:srcCompat="@drawable/ic_main_twitter" />

            <ImageView
                android:id="@+id/youtubeImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toEndOf="@+id/facebookImg"
                app:layout_constraintTop_toBottomOf="@+id/banner2Img"
                app:srcCompat="@drawable/ic_main_youtube" />

            <ImageView
                android:id="@+id/video"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/videoTxt"
                app:srcCompat="@drawable/img_video_exp" />

            <TextView
                android:id="@+id/videoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="제목"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/video" />

            <TextView
                android:id="@+id/VideoSinger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:text="가수"
                android:textColor="#d7d7d7"
                android:textSize="8sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/videoTitle" />

            <ImageView
                android:id="@+id/albumImg"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"

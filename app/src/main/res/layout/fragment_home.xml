            <TextView
                android:id="@+id/singer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="190dp"
                android:layout_marginTop="4dp"
                android:text="가수"
                android:textColor="#d7d7d7"

                app:layout_constraintTop_toBottomOf="@+id/pocastTitle" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/bannerVP"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/albumTxt" />

            <TextView
                android:id="@+id/podcastTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="@string/podcast_txt"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bannerVP" />

            <TextView
                android:id="@+id/videoTxt"
                android:layout_width="wrap_content"

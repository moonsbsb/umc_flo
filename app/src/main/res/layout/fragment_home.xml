            <TextView
                android:id="@+id/todayMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/today_music_txt"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/panelVP" />

            <TextView
                android:id="@+id/globalTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="해외"
                app:layout_constraintEnd_toStartOf="@+id/koreaTxt"
                app:layout_constraintTop_toBottomOf="@+id/panelVP" />

            <TextView
                android:id="@+id/synthesis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="종합"
                app:layout_constraintEnd_toStartOf="@+id/globalTxt"
                app:layout_constraintTop_toBottomOf="@+id/panelVP" />

            <TextView
                android:id="@+id/koreaTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="국내"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/panelVP" />

            <TextView
                android:id="@+id/pocastTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="제목"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView9" />

            <TextView
                android:id="@+id/singer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:text="가수"
                android:textColor="#d7d7d7"
                android:textSize="8sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pocastTitle" />


            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toEndOf="@+id/podcastImg"
                app:layout_constraintTop_toBottomOf="@+id/podcastTxt"
                app:srcCompat="@drawable/img_potcast_exp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="12dp"
